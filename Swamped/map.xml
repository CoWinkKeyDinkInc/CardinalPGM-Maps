<?xml version="1.0"?>
<map proto="1.3.0">
<name>Swamped</name>
<version>1.0</version>
<objective>Leak lava from the enemies obsidian core above their tree.</objective>
<authors>
  <author>Mikeg542</author>
</authors>
<contributors>
  <contributor contribution='map name/minor feedback'>Dvdrummer360</contributor>
</contributors>
<teams>
  <team color="gold" max="50">Orange Team</team>
  <team color="dark purple" max="50">Purple Team</team>
</teams>
<kits>
  <kit name="spawn">
    <potion duration="10" amplifier="4">heal</potion>
    <item slot="0">iron sword</item>
    <item slot="1">bow</item>
    <item slot="2">diamond pickaxe</item>
    <item slot="3">iron axe</item>
    <item slot="4" amount="32">log</item>
    <item slot="5" amount="32">cooked fish</item>
    <item slot="6" amount="15">vines</item>
    <item slot="7" amount="2">golden apple</item>
    <item slot="27" amount="64">arrow</item>
    <item slot="28" amount="64">arrow</item>
  </kit>
</kits>
<spawns>
  <spawn team="purple" kit="spawn" yaw="0">
  <cylinder base="39,11,-55" radius="3" height="0"/>
</spawn>
<spawn team="purple" kit="spawn" yaw="0">
  <cylinder base="-40,11,-55" radius="3" height="0"/>
</spawn>
<spawn team="orange" kit="spawn" yaw="180">
  <cylinder base="40,11,211" radius="3" height="0"/>
</spawn>
<spawn team="orange" kit="spawn" yaw="180">
  <cylinder base="-39,11,211" radius="3" height="0"/>
</spawn>
<default yaw="90">
  <cylinder base="76,41,79" radius="3" height="0"/>
</default>
</spawns>
<playable>
  <rectangle min="-49,-63" max="49,219"/>
</playable>
<filters>
</filters>
<regions>
  <!--  Standard Spawn Protection  -->
  <apply block="deny-all" message="You may not modify the team spawns!">
    <!-- Orange Team -->
    <rectangle min="-47,201" max="31,-62"/>
    <rectangle min="32,201" max="48,218"/>
    <!-- Purple Team -->
    <rectangle min="47,-45" max="-31,218"/>
    <rectangle min="-32,-45" max="-48,-62"/>
  </apply>
  <!--  Enchantment Table Protection  -->
  <apply block="deny-all" message="You may not move or destroy the enchanting table!">
    <block>0,15,78</block>
  </apply>
  <!-- Standard world protection -->
  <apply block="deny-all" message="You may not build outside the map!">
    <negative>
      <rectangle min="-49,-63" max="49,219"/>
    </negative>
  </apply>
  <!-- Disable Fire spread -->
  <apply block="deny-world">
    <rectangle min="-49,-63" max="49,219"/>
  </apply>
</regions>
<cores material="obsidian" leak="4">
  <core team="purple" name="core">
    <cuboid min="-7,49,13" max="-1,57,7"/>
  </core>
  <core team="orange" name="core">
    <cuboid min="7,49,149" max="1,57,143"/>
  </core>
</cores>
<itemremove>
  <item>cooked fish</item>
  <item>iron sword</item>
  <item>iron axe</item>
  <item>diamond pickaxe</item>
</itemremove>
<toolrepair>
  <tool>iron sword</tool>
  <tool>diamond pickaxe</tool>
  <tool>bow</tool>
</toolrepair>
<maxbuildheight>50</maxbuildheight>
<timelock>on</timelock>
</map>
