<map proto="1.4.1">
<include src="tutorial.xml"/>
<include src="blitz-global.xml"/>
<name>CardinalPGM Test</name>
<version>1.0</version>
<objective>Make sure CardinalPGM works!</objective>
<authors>
    <author uuid="5c79d2c9-a4f0-4343-a84b-e1720f13009b"/>
    <!-- CoWinkKeyDinkInc -->
</authors>
<teams>
    <team id="red" color="dark red" max="1">Red Tester</team>
    <team id="blue" color="blue" max="1">Blue Tester</team>
</teams>
<spawns>
    <spawn team="red" kit="red">
        <regions yaw="-90">
            <point id="red-spawn">-2,12,2</point>
        </regions>
    </spawn>
    <spawn team="blue" kit="blie">
        <regions yaw="-90">
            <point id="blue-spawn">-2,12,-2</point>
        </regions>
    </spawn>
</spawns>
<kits>
    <kit id="spawn" force="true">
        <!-- <item slot="1" enchantment="arrow infinite:1">bow</item> -->
        <item slot="1" amount="64">ender pearl</item>
        <item slot="8" amount="32" material="bread"/>
        <effect duration="5" amplifier="1">instant_health</effect>
    </kit>
    <kit id="red" parents="spawn">
        <helmet color="cd0000" material="leather helmet"/>
    </kit>
    <kit id="blue" parents="spawn">
        <helmet color="0066cc" material="leather helmet"/>
    </kit>
</kits>
<blitz>
    <lives>3</lives>
    <broadcastLives>true</broadcastLives>
</blitz>
<wools>
    <wool team="red" color="red" craftable="false">
        <monument><block>6,2,2</block></monument>
        <!-- Red player has to place a red wool block at 6,2,2 to win -->
    </wool>
    <wool team="blue" color="blue" craftable="false">
        <monument><block>6,2,-2</block></monument>
    </wool>
</wools>
<destroyables name="Monument" materials="obsidian" completion="100%" mode-changes="true">
    <destroyable owner="red">
       <region>
           <cuboid min="12,2,2" max="12,2,3"/>
       </region>
    </destroyable>
    <destroyable owner="blue">
       <region>
           <cuboid min="12,2,-2" max="12,2,-3"/>
        </region>
    </destroyable>
</destroyables>
<cores material="obsidian" leak="2" mode-changes="true">
    <core team="red" name="Red Core">
        <region>
            <cuboid min="17,1,3" max="19,3,1"/>
        </region>
    </core>
    <core team="blue" name="Blue Core">
        <region>
            <cuboid min="17,1,-1" max="19,3,-3"/>
        </region>
    </core>
</cores>
<modes>
    <mode after="10s" material="gold block" name="`oThe Five Seconds Mode"/>
    <mode after="5s" material="glass block" name="`kGGG `oWIN MODE `kGGG"/>
</modes>
<score>
    <!-- First team to reach 100 points wins the match -->
    <limit>100</limit>
    <kills>3</kills> <!-- +3 points for every kill -->
    <deaths>2</deaths> <!-- -2 points for accidentally dying -->
    <box points="2" filter="only-red">
</score>

